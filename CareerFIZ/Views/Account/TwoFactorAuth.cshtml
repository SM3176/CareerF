@{
    ViewData["Title"] = "TwoFactorAuth";
    Layout = "_LayoutAccount";
    ViewData["usr"] = ViewData["User"];
}
<h1 class="mb-2">Two Factor Authentication via Email</h1>
<hr />
        <form method="post" asp-action="TwoFactorAuth" asp-controller="Account">
            <div class="form-group">
                <label>Enter the Verification Token Send to Your Email</label>
                <input type="text" name="Token" id="Token" class="form-control" />

            </div>
            <button type="submit" class="btn btn-primary">Submit Code</button>
        </form>